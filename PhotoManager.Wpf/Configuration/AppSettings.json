{
  "Theme": {
    "Name": "DarkTeal",
    "Colors": {
      "WindowBackground": "#2D2D30",
      "InputFieldBackground": "#3E3E42",
      "InputFieldBorder": "#505050",
      "PrimaryAccent": "#20B2AA",
      "HoverAccent": "#48C9B0",
      "PressedAccent": "#1A8A8A",
      "WhiteText": "#FFFFFF",
      "LightGrayText": "#CCCCCC",
      "PlaceholderText": "#999999",
      "ErrorText": "#F14C4C"
    },
    "Shadows": {
      "WindowShadow": {
        "BlurRadius": 20,
        "Direction": 270,
        "ShadowDepth": 5,
        "Color": "#000000",
        "Opacity": 0.3
      },
      "ButtonShadow": {
        "BlurRadius": 8,
        "Direction": 270,
        "ShadowDepth": 2,
        "Color": "#000000",
        "Opacity": 0.3
      },
      "IconShadow": {
        "BlurRadius": 10,
        "Direction": 270,
        "ShadowDepth": 3,
        "Color": "#000000",
        "Opacity": 0.3
      },
      "InputFieldShadow": {
        "BlurRadius": 4,
        "Direction": 270,
        "ShadowDepth": 1,
        "Color": "#000000",
        "Opacity": 0.2
      }
    }
  },
  "Application": {
    "WindowTitle": "Photo Manager",
    "DefaultWindowWidth": 900,
    "DefaultWindowHeight": 500,
    "LoginDialogWidth": 200,
    "RegistrationDialogWidth": 250
  },
  "Database": {
    "ConnectionString": "Data Source=PhotoManager.db",
    "EnableLogging": true
  },
  "Features": {
    "EnableUserRegistration": true,
    "EnablePhotoUpload": true,
    "EnablePhotoDownload": true,
    "MaxFileSizeMB": 50,
    "AllowedImageFormats": [".jpg", ".jpeg", ".png", ".gif", ".bmp"]
  }
} 