{
  "Theme": {
    "Name": "LightBlue",
    "Colors": {
      "WindowBackground": "#F0F8FF",
      "InputFieldBackground": "#FFFFFF",
      "InputFieldBorder": "#87CEEB",
      "PrimaryAccent": "#4169E1",
      "HoverAccent": "#6495ED",
      "PressedAccent": "#191970",
      "WhiteText": "#000000",
      "LightGrayText": "#696969",
      "PlaceholderText": "#A9A9A9",
      "ErrorText": "#DC143C"
    },
    "Shadows": {
      "WindowShadow": {
        "BlurRadius": 15,
        "Direction": 270,
        "ShadowDepth": 3,
        "Color": "#000000",
        "Opacity": 0.2
      },
      "ButtonShadow": {
        "BlurRadius": 6,
        "Direction": 270,
        "ShadowDepth": 1,
        "Color": "#000000",
        "Opacity": 0.2
      },
      "IconShadow": {
        "BlurRadius": 8,
        "Direction": 270,
        "ShadowDepth": 2,
        "Color": "#000000",
        "Opacity": 0.2
      },
      "InputFieldShadow": {
        "BlurRadius": 3,
        "Direction": 270,
        "ShadowDepth": 1,
        "Color": "#000000",
        "Opacity": 0.1
      }
    }
  },
  "Application": {
    "WindowTitle": "Photo Manager - Light Blue Theme",
    "DefaultWindowWidth": 900,
    "DefaultWindowHeight": 500,
    "LoginDialogWidth": 200,
    "RegistrationDialogWidth": 250
  },
  "Database": {
    "ConnectionString": "Data Source=PhotoManager.db",
    "EnableLogging": true
  },
  "Features": {
    "EnableUserRegistration": true,
    "EnablePhotoUpload": true,
    "EnablePhotoDownload": true,
    "MaxFileSizeMB": 50,
    "AllowedImageFormats": [".jpg", ".jpeg", ".png", ".gif", ".bmp"]
  }
} 