<Window x:Class="PhotoManager.Wpf.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PhotoManager.Wpf.Converters"
        xmlns:resources="clr-namespace:PhotoManager.Wpf.Resources"
        Title="Login" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Window.Resources>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
    </Window.Resources>
    
    <Border Background="{DynamicResource WindowBackgroundBrush}" 
            CornerRadius="10" 
            Effect="{StaticResource WindowShadow}"
            Margin="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        
        <Grid Width="200" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Photo Icon -->
            <StackPanel Grid.Row="0" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,15">
                <Ellipse Width="60" 
                         Height="60" 
                         Style="{StaticResource IconEllipseStyle}"
                         Margin="0,0,0,8"/>
                <Path Data="{StaticResource CameraIcon}" 
                      Fill="White" 
                      Stretch="Uniform" 
                      Width="30" 
                      Height="30"/>
            </StackPanel>
            
            <!-- Welcome Title -->
            <TextBlock Grid.Row="1" 
                       Text="Welcome" 
                       Style="{StaticResource TitleTextStyle}"
                       Margin="0,0,0,8"/>
            
            <!-- Subtitle -->
            <TextBlock Grid.Row="2" 
                       Text="Sign in to your existing account" 
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="0,0,0,20"/>
            
            <!-- Username Field -->
            <Border Grid.Row="3" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,12">
                <Grid>
                    <TextBlock Text="User name" 
                               
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Username}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginTextBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Password Field -->
            <Border Grid.Row="4" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,20">
                <Grid>
                    <TextBlock Text="Password" 
                               
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Password}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource LoginPasswordBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="5" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                <Button Content="{x:Static resources:StringResourceManager.Login_SignInButton}" 
                        Width="80" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="{x:Static resources:StringResourceManager.Login_CancelButton}" 
                        Width="80" 
                        Height="35"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
            
            <!-- Error Message -->
            <TextBlock Grid.Row="6"
                       Text="{Binding ErrorMessage}"
                       Style="{StaticResource ErrorTextStyle}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>
            
            <!-- Create Account Link -->
            <TextBlock Grid.Row="7"
                       Text="Don't have an account? Create one"
                       Style="{StaticResource CreateAccountLinkStyle}"
                       Cursor="Hand"
                       MouseLeftButtonDown="CreateAccount_MouseLeftButtonDown"/>
        </Grid>
    </Border>
</Window> 