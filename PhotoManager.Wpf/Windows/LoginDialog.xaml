<Window x:Class="PhotoManager.Wpf.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PhotoManager.Wpf.Converters"
        Title="Login" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Window.Resources>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>

        <ControlTemplate x:Key="ModernButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" 
                                  Direction="270" 
                                  ShadowDepth="2" 
                                  Color="Black" 
                                  Opacity="0.3"/>
                </Border.Effect>
                <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFCC80"/>
                    <Setter Property="BorderBrush" Value="#FFCC80"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA726"/>
                    <Setter Property="BorderBrush" Value="#FFA726"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="WindowShadow" 
                          BlurRadius="20" 
                          Direction="270" 
                          ShadowDepth="5" 
                          Color="Black" 
                          Opacity="0.3"/>

        
    </Window.Resources>
    
    <Border Background="{StaticResource WindowGradientBrush}" 
            CornerRadius="10" 
            Effect="{StaticResource WindowShadow}"
            Margin="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        
        <Grid Width="200" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Photo Icon -->
            <StackPanel Grid.Row="0" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,15">
                <Ellipse Width="60" 
                         Height="60" 
                         Style="{StaticResource IconEllipseStyle}"
                         Margin="0,0,0,8"/>
                <Path Data="M4,4H7L9,2H15L17,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M12,7A5,5 0 0,0 7,12A5,5 0 0,0 12,17A5,5 0 0,0 17,12A5,5 0 0,0 12,7M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9Z" 
                      Fill="White" 
                      Stretch="Uniform" 
                      Width="30" 
                      Height="30"/>
            </StackPanel>
            
            <!-- Welcome Title -->
            <TextBlock Grid.Row="1" 
                       Text="Welcome" 
                       Style="{StaticResource TitleTextStyle}"
                       Margin="0,0,0,8"/>
            
            <!-- Subtitle -->
            <TextBlock Grid.Row="2" 
                       Text="Sign in to your existing account" 
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="0,0,0,20"/>
            
            <!-- Username Field -->
            <Border Grid.Row="3" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,12">
                <Grid>
                    <TextBlock Text="User name" 
                               
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Username}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginTextBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Password Field -->
            <Border Grid.Row="4" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,20">
                <Grid>
                    <TextBlock Text="Password" 
                               
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Password}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource LoginPasswordBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="5" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                <Button Content="Sign In" 
                        Width="80" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="Cancel" 
                        Width="80" 
                        Height="35"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
            
            <!-- Error Message -->
            <TextBlock Grid.Row="6"
                       Text="{Binding ErrorMessage}"
                       Style="{StaticResource ErrorTextStyle}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>
            
            <!-- Create Account Link -->
            <TextBlock Grid.Row="7"
                       Text="Don't have an account? Create one"
                       Style="{StaticResource CreateAccountLinkStyle}"
                       Cursor="Hand"
                       MouseLeftButtonDown="CreateAccount_MouseLeftButtonDown"/>
        </Grid>
    </Border>
</Window> 