<Window x:Class="PhotoManager.Wpf.RegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PhotoManager.Wpf.Converters"
        xmlns:resources="clr-namespace:PhotoManager.Wpf.Resources"
        xmlns:local="clr-namespace:PhotoManager.Wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        
        Title="Create Account" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Window.Resources>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" Invert="False"/>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityInvertConverter" Invert="True"/>
    </Window.Resources>
    
    <Border Background="{DynamicResource WindowBackgroundBrush}" 
            CornerRadius="10" 
            Effect="{StaticResource WindowShadow}"
            Margin="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        
        <Grid Width="250"
              Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,15">
                <Ellipse Width="60" 
                         Height="60" 
                         Style="{StaticResource IconEllipseStyle}"
                         Margin="0,0,0,8"/>
                <Path Data="{StaticResource UserIcon}" 
                      Fill="White" 
                      Stretch="Uniform" 
                      Width="30" 
                      Height="30"/>
            </StackPanel>
            
            <TextBlock Grid.Row="1" 
                       Text="Create Account" 
                       Style="{StaticResource TitleTextStyle}"
                       Margin="0,0,0,8"/>
            
            <TextBlock Grid.Row="2" 
                       Text="Enter your details to create a new account" 
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="0,0,0,20"/>
            
            <!-- Username Field -->
            <Border Grid.Row="3" 
                    Style="{StaticResource LoginInputFieldStyle}">
                <Grid>
                    <TextBlock Text="Username" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource PlaceholderTextStyle}"
                               Visibility="{Binding Username, Converter={StaticResource EmptyStringToVisibilityInvertConverter}}"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginTextBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Email Field -->
            <Border Grid.Row="4"
                    Style="{StaticResource LoginInputFieldStyle}">
                <Grid>
                    <TextBlock Text="Email" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource PlaceholderTextStyle}"
                               Visibility="{Binding Email, Converter={StaticResource EmptyStringToVisibilityInvertConverter}}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginTextBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Password Field -->
            <Border Grid.Row="5" 
                    Style="{StaticResource LoginInputFieldStyle}">
                <Grid>
                    <TextBlock Text="Password" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource PlaceholderTextStyle}"
                               Visibility="{Binding Password, Converter={StaticResource EmptyStringToVisibilityInvertConverter}}"/>
                    <PasswordBox x:Name="PasswordBox"
                                 local:PasswordBoxAssistant.BindPassword="True"
                                 local:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource LoginPasswordBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Confirm Password Field -->
            <Border Grid.Row="6" 
                    Style="{StaticResource LoginInputFieldStyle}">
                <Grid>
                    <TextBlock Text="Confirm Password" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource PlaceholderTextStyle}"
                               Visibility="{Binding ConfirmPassword, Converter={StaticResource EmptyStringToVisibilityInvertConverter}}"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 local:PasswordBoxAssistant.BindPassword="True"
                                 local:PasswordBoxAssistant.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource LoginPasswordBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="7" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                <Button Content="{x:Static resources:StringResourceManager.Registration_CreateAccountButton}" 
                        Margin="0,0,10,0"                        
                        Command="{Binding CreateAccountCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="{x:Static resources:StringResourceManager.Login_CancelButton}" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
            
            <!-- Status Message -->            
            <TextBlock Grid.Row="8"
                       Text="{Binding StatusMessage}"
                       Style="{StaticResource StatusTextStyle}"
                       Visibility="{Binding StatusMessage, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>

            <!-- Back to Login Link -->
            <TextBlock Grid.Row="9"
                       Text="Already have an account? Sign in"
                       Style="{StaticResource CreateAccountLinkStyle}"
                       Cursor="Hand"
                       MouseLeftButtonDown="BackToLogin_MouseLeftButtonDown"/>
        </Grid>
    </Border>
</Window> 