<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:configuration="clr-namespace:PhotoManager.Wpf.Configuration">

    <!-- Dynamic Color Brushes - These will be populated at runtime -->
    <SolidColorBrush x:Key="DynamicWindowBackgroundBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicInputFieldBackgroundBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicInputFieldBorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicPrimaryAccentBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicHoverAccentBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicPressedAccentBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicWhiteTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicLightGrayTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicPlaceholderTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="DynamicErrorTextBrush" Color="Gray"/>

    <!-- Dynamic Shadow Effects - These will be populated at runtime -->
    <DropShadowEffect x:Key="DynamicWindowShadow" 
                      BlurRadius="20" 
                      Direction="270" 
                      ShadowDepth="5" 
                      Color="Black" 
                      Opacity="0.3"/>

    <DropShadowEffect x:Key="DynamicButtonShadow" 
                      BlurRadius="8" 
                      Direction="270" 
                      ShadowDepth="2" 
                      Color="Black" 
                      Opacity="0.3"/>

    <DropShadowEffect x:Key="DynamicIconShadow" 
                      BlurRadius="10" 
                      Direction="270" 
                      ShadowDepth="3" 
                      Color="Black" 
                      Opacity="0.3"/>

    <DropShadowEffect x:Key="DynamicInputFieldShadow" 
                      BlurRadius="4" 
                      Direction="270" 
                      ShadowDepth="1" 
                      Color="Black" 
                      Opacity="0.2"/>

</ResourceDictionary> 