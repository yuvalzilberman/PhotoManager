<Window x:Class="PhotoManager.Wpf.RegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PhotoManager.Wpf.Converters"
        Title="Create Account" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Window.Resources>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="WindowShadow" 
                          BlurRadius="20" 
                          Direction="270" 
                          ShadowDepth="5" 
                          Color="Black" 
                          Opacity="0.3"/>
    </Window.Resources>
    
    <Border Background="{StaticResource WindowGradientBrush}" 
            CornerRadius="10" 
            Effect="{StaticResource WindowShadow}"
            Margin="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        
        <Grid Width="250" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Photo Icon -->
            <StackPanel Grid.Row="0" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,15">
                <Ellipse Width="60" 
                         Height="60" 
                         Style="{StaticResource IconEllipseStyle}"
                         Margin="0,0,0,8"/>
                <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                      Fill="White" 
                      Stretch="Uniform" 
                      Width="30" 
                      Height="30"/>
            </StackPanel>
            
            <!-- Title -->
            <TextBlock Grid.Row="1" 
                       Text="Create Account" 
                       Style="{StaticResource TitleTextStyle}"
                       Margin="0,0,0,8"/>
            
            <!-- Subtitle -->
            <TextBlock Grid.Row="2" 
                       Text="Enter your details to create a new account" 
                       Style="{StaticResource SubtitleTextStyle}"
                       Margin="0,0,0,20"/>
            
            <!-- Username Field -->
            <Border Grid.Row="3" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,12">
                <Grid>
                    <TextBlock Text="Username" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Username}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginTextBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Email Field -->
            <Border Grid.Row="4" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,12">
                <Grid>
                    <TextBlock Text="Email" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Email}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginTextBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Password Field -->
            <Border Grid.Row="5" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,12">
                <Grid>
                    <TextBlock Text="Password" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Password}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource LoginPasswordBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Confirm Password Field -->
            <Border Grid.Row="6" 
                    Style="{StaticResource LoginInputFieldStyle}"
                    Margin="0,0,0,20">
                <Grid>
                    <TextBlock Text="Confirm Password" 
                               Panel.ZIndex="1"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ConfirmPassword}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Style="{StaticResource LoginPasswordBoxStyle}"/>
                </Grid>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="7" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12">
                <Button Content="Create Account" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Command="{Binding CreateAccountCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="Cancel" 
                        Width="80" 
                        Height="35"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
            
            <!-- Error Message -->
            <TextBlock Grid.Row="8"
                       Text="{Binding ErrorMessage}"
                       Style="{StaticResource ErrorTextStyle}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>
            
            <!-- Back to Login Link -->
            <TextBlock Grid.Row="9"
                       Text="Already have an account? Sign in"
                       Style="{StaticResource CreateAccountLinkStyle}"
                       Cursor="Hand"
                       MouseLeftButtonDown="BackToLogin_MouseLeftButtonDown"/>
        </Grid>
    </Border>
</Window> 